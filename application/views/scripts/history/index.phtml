
<h2><?php echo $this->project->getName(); ?> Deployment History</h2>

<?php if(is_array($this->deployments) && count($this->deployments) > 0): ?>
<table border="1">
	<thead>
		<tr>
			<th>Date/Time</th>
			<th>Server</th>
			<th>Status</th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	<tbody>
	<?php foreach($this->deployments as $deployment): ?>
		<tr>
			<td><?php echo $deployment->getWhen("d/m/Y H:i:s"); ?></td>
			<td><?php echo $deployment->getServer()->getDisplayName(); ?></td>
			<td><?php echo $deployment->getDeploymentStatus()->getName(); ?></td>
			<td>View</td>
		</tr>
	<?php endforeach; ?>
	</tbody>
</table>
<?php else: ?>
<p id="no-deployments">There are no deployments.</p>
<?php endif; ?>
